.editor {
  .modal-dialog {
    display: flex;
    flex-direction: column;
  }

  button {
    rounded-button();
  }

  main {
    overflow-y: scroll;

    > div {
      display: flex;
      padding: 0.8em;
      justify-content: center;

      .wrap {
        display: flex;
        flex-direction: column;
      }

      .content {
        font-size: 4em;
      }

      .separator {
        button {
          visibility: hidden;

          &:before {
            content: '\00a0'
          }
        }
      }

      button {
        background: neutral-color;
        margin: 0.4em 0;
        padding: 0.6em 0;

        i {
          margin-right: 0.4em;
        }
      }
    }
  }

  footer {
    background: #FFF;
    border-top: solid 1px neutral-color;
    border-radius: 0 0 3px 3px;
    display: flex;
    flex-shrink: 0;
    justify-content: space-between;
    padding: 0.8em;

    .ok {
      background: success-color;
      color: light-color;
    }

    .remove {
      background: error-color;
      color: light-color;
    }
  }
}
