.editor {
  main {
    display: flex;
    padding: 0.8em;
    justify-content: center;

    .wrap {
      display: flex;
      flex-direction: column;
    }

    .content {
      font-size: 4em;
    }

    .separator {
      button {
        visibility: hidden;

        &:before {
          content: '\00a0'
        }
      }
    }

    button {
      margin: 0.4em 0;
      padding: 0.6em 0;

      i {
        margin-right: 0.4em;
      }
    }
  }

  footer {
    display: flex;
    justify-content: space-between;
    padding: 0.8em;

    .remove {
      background: error-color;
      border-color: darken(error-color, 20%);
      color: light-color;
    }
  }
}
