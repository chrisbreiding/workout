.timer {
  margin: 0.6em;

  span {
    display: inline-block
  }
}

.timer-editor {
  display: flex;

  .wrap {
    display: flex;
    flex-direction: column;
  }

  .content {
    font-size: 3em;
  }

  .separator {
    button {
      visibility: hidden;

      &:before {
        content: '\00a0'
      }
    }
  }

  button {
    margin: 0.4em 0;
    padding: 0.6em 0;

    i {
      margin-right: 0.4em;
    }
  }
}
